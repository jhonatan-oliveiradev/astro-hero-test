---
import Button from "./Button.astro";

---

<script>
	document.getElementById("navMenuToggler")?.addEventListener("click", function () {
		const navMenu = document.getElementById("navMenu")
		navMenu?.classList.toggle("h-0")
		navMenu?.classList.toggle("h-full")
		navMenu?.classList.toggle("opacity-0")
		navMenu?.classList.toggle("opacity-95")
	})
</script>

<header class="h-12 md:h-20 px-8 md:px-12 xl:px-28 flex gap-12 items-center">
	<a href="#" class="text-3xl font-bold">ACME</a>

	<button id="navMenuToggler" class="fixed top-0 right-0 p-4 z-20 lg:hidden">Menu</button>

	<div class="fixed xl:relative flex-col lg:flex-row top-0 left-0 z-10 bg-light dark:bg-dark opacity-0 text-center overflow-hidden transition-all duration-500 flex gap-8 items-center justify-center w-full h-0 lg:h-full lg:opacity-100" id="navMenu">
		<nav class="flex lg:flex-1 flex-col gap-8 lg:flex-row">
			<a href="#">Home</a>
			<a href="#">Company</a>
			<a href="#">Products</a>
			<a href="#">Contact Us</a>
		</nav>
		<Button />
	</div>
</header>
