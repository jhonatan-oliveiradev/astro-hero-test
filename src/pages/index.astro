---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Button from '../components/Button.astro';
---

<Layout title="Home | ACME">
	<Header />
	<main class="mt-16 xl:mt-24 px-8 md:px-12 xl:px-28 flex flex-col gap-16 xl:flex-row-reverse xl:items-center">
		<img class="mx-auto xl:w-[640px]" src="https://topdelivery.com.br/wp-content/uploads/2023/06/MASCOTE-02-PNG-1024x1024.png" alt="hero banner" />
		<div class="flex flex-col gap-8 items-center xl:items-start text-center xl:text-left">
			<h1 class="text-4xl xl:text-5xl font-bold">Anything You May Need, Delivered To You
				<span class="text-primary">Today</span>!
			</h1>
			<p class="md: text-xl">
				Lorem ipsum dolor sit, amet consectetur adipisicing elit. Error ut quae, sunt adipisci pariatur qui quisquam
				blanditiis tempore labore tempora minus.
			</p>
			<Button />
		</div>
	</main>
</Layout>